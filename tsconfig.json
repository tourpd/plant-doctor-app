{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],

      "@/lib/*": ["app/lib/*"],
      "@/data/*": ["app/data/*"],
      "@/constants/*": ["app/constants/*"],
      "@/components/*": ["app/components/*"],
      "@/app/*": ["app/*"],

      // ðŸ”¥ ì¶”ê°€ (ë¹¨ê°„ì¤„ ì œê±°ìš©)
      "@lib/*": ["app/lib/*"],
      "@data/*": ["app/data/*"]
    },

    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}